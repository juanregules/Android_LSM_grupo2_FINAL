<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/answerer_btnRendirse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EE5555"
        android:text="Â¡Me Rindo!"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/answerer_ivFoto"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/common_full_open_on_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerer_btnRendirse" />

    <TextView
        android:id="@+id/answerer_tvEsperando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Esperando pregunta..."
        android:textColor="#CC5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/answerer_ivFoto"
        app:layout_constraintEnd_toEndOf="@+id/answerer_ivFoto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/answerer_ivFoto"
        app:layout_constraintTop_toTopOf="@+id/answerer_ivFoto"
        app:layout_constraintVertical_bias="0.500" />

    <EditText
        android:id="@+id/answerer_etRespuesta"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/answerer_ivFoto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/answerer_ivFoto"
        app:layout_constraintTop_toBottomOf="@+id/answerer_ivFoto" />

    <Button
        android:id="@+id/answerer_btnResponder"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text="Responder"
        app:layout_constraintEnd_toEndOf="@+id/answerer_etRespuesta"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/answerer_etRespuesta"
        app:layout_constraintTop_toBottomOf="@+id/answerer_etRespuesta" />
</android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/formaletra"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
